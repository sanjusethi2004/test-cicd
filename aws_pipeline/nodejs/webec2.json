{
  "builders": [{
    "type": "amazon-ebs",
    "region": "us-east-1",
    "source_ami": "ami-0bba96c31d87e65d9",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "web-instance {{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["mkdir web", "sudo apt-get update", "sudo apt-get -y install npm nodejs-legacy"],
      "pause_before": "10s"
    },
    {
      "type": "file",
      "source" : "../web/",
      "destination" : "web"
    },

    {
    "type": "shell",
    "inline": ["cd web", "npm install"],
    "pause_before": "10s"
    }
  ]
}
